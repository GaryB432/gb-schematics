    // "skipLibCheck": true,
    // "esModuleInterop": true,



    "baseUrl": "tsconfig",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "noUnusedParameters": true,
    "rootDir": "src/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "types": ["jasmine", "node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["src/**/*.d.ts", "src/**/*.spec.ts", "src/*/other-files/**/*"]
}

