{
  "$schema": "http://json-schema.org/schema",
  "$id": "GbSchematicsSveltekitComponent",
  "title": "GB Schematics SveltekitComponent Options Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the route.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the component?"
    },
    "directory": {
      "description": "The directory for your component, under src",
      "type": "string",
      "default": "lib/components"
    },
    "style": {
      "description": "The value of style element lang attribute",
      "type": "string",
      "default": "scss",
      "enum": ["css", "scss", "none"]
    }
  },

  "required": ["name"]
}
